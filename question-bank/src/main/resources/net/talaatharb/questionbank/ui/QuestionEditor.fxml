<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.talaatharb.questionbank.ui.controllers.QuestionEditorController">
   <top>
      <VBox spacing="10" styleClass="header">
         <children>
            <Label text="Question Editor" styleClass="title-label" />
            <Label fx:id="questionNumberLabel" text="Question 1 of 1" styleClass="subtitle-label" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox spacing="20">
         <children>
            <VBox spacing="10">
               <children>
                  <Label text="Question:" styleClass="section-label" />
                  <TextField fx:id="questionTextField" promptText="Enter question text here" styleClass="question-input" />
               </children>
            </VBox>
            <VBox spacing="10">
               <children>
                  <Label text="Answer:" styleClass="section-label" />
                  <TextArea fx:id="answerTextArea" promptText="Enter answer text here" prefHeight="200.0" prefWidth="600.0" styleClass="answer-input" wrapText="true" />
               </children>
            </VBox>
            <VBox spacing="10">
               <children>
                  <Label text="Category:" styleClass="section-label" />
                  <TextField fx:id="categoryTextField" promptText="Enter category (e.g., Programming, Math, etc.)" styleClass="category-input" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <VBox spacing="10">
         <children>
            <HBox spacing="10" alignment="CENTER">
               <children>
                  <Button fx:id="previousButton" text="Previous" />
                  <Button fx:id="nextButton" text="Next" />
                  <Button fx:id="saveButton" text="Save Question" disable="true" />
               </children>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
               <children>
                  <Button fx:id="addQuestionButton" text="Add New Question" />
                  <Button fx:id="deleteQuestionButton" text="Delete Question" />
                  <Button fx:id="saveBankButton" text="Save Bank" />
                  <Button fx:id="backToListButton" text="Back to List" />
               </children>
            </HBox>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-label" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane> 